    <ul class="zines">
      <% for(var i=0; i<zines.length; i++) {%>
        <li class="zine">
          <span><%= zines[i].title || zines[i].Title %></span>
          <span><%= zines[i].creator || zines[i].Creator %></span>
        </li>
      <% } %>

<h1>Add Your Favorite Zine</h1>
<form action="/zines" method="POST">
  <input type="text" placeholder="title" name="title">
  <input type="text" placeholder="creator" name="creator">
  <button type="submit">Submit</button>
</form>
